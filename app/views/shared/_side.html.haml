.side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.nickname
      %ul.side-header__box__menu
        %li.side-header__box__menu__edit-user
          = link_to new_group_path, method: :get do
            %i.fa.fa-edit
        %li.side-header__box__menu__new-group
          = link_to edit_user_registration_path(current_user), method: :get do
            %i.fa.fa-cog
  .side-groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), method: :get do
        .side-groups__group
          %p.side-groups__group-name
            = group.name
            %p.side-groups__group-message
              = group.show_last_message
